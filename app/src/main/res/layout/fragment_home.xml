<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 头部区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning 👋"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/bell_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:tint="#1F2937"/>
        </LinearLayout>

        <!-- 搜索框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F5F9"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_explore"
                android:tint="#64748B"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search fresh products..."
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:background="@null"/>
        </LinearLayout>

        <!-- 分类标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="16dp"/>

        <!-- 分类区域（圆形图标 + 文字） -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 🍓 Fruits -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/strawberry"
                        android:background="@drawable/circle_background"
                        android:padding="12dp"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruits"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 🧀 Dairy -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/cheese"
                        android:background="@drawable/circle_background"
                        android:padding="12dp"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dairy"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 🥦 Greens -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/celery"
                        android:background="@drawable/circle_background"
                        android:padding="12dp"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Greens"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Today's Menu -->
        <!-- ✅ 点击跳转用的包裹容器 -->
        <LinearLayout
            android:id="@+id/todays_menu_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FBF4D9"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="0dp"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="#FDF7DF"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍽️ Today’s Menu Suggestion"
                android:textSize="16sp"
                android:textColor="#D97706"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to view: blueberry pie 🫐, cheesy omelette 🧀, and pumpkin soup 🎃!"
                android:textSize="14sp"
                android:textColor="#7C3A00"
                android:layout_marginTop="4dp" />
        </LinearLayout>





        <!-- 产品标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Products"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="16dp"/>

        <!-- 产品区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- 蓝莓 -->
            <LinearLayout
                android:id="@+id/card_blueberry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/blueberry"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh Blueberries - $4.99"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>
            </LinearLayout>

            <!-- 鸡蛋 -->
            <LinearLayout
                android:id="@+id/card_egg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/egg"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organic Eggs - $5.99"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>
            </LinearLayout>

            <!-- 有机鸡肉 -->
            <LinearLayout
                android:id="@+id/card_chicken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/chicken"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organic Chicken - $9.99"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>
            </LinearLayout>

            <!-- 奶酪 -->
            <LinearLayout
                android:id="@+id/card_cheese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cheese"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farm Cheese - $6.49"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>
            </LinearLayout>

            <!-- 葡萄 -->
            <LinearLayout
                android:id="@+id/card_grape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/grape"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organic Grapes - $4.29"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>
            </LinearLayout>

            <!-- 南瓜 -->
            <LinearLayout
                android:id="@+id/card_pumpkin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pumpkin"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local Pumpkin - $3.79"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>