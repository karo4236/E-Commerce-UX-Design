<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:paddingTop="16dp">

    <!-- ðŸ›’ æ ‡é¢˜ -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shopping Cart"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#1F2937" />

    <!-- ðŸ§º è´­ç‰©é¡¹å®¹å™¨ -->
    <LinearLayout
        android:id="@+id/cart_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp" />

    <!-- ðŸ“¦ é€è´§åœ°å€ -->
    <LinearLayout
        android:id="@+id/delivery_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            android:tint="#22C55E" />

        <TextView
            android:id="@+id/delivery_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery to: 1423 Rd Gernard, Kelowna.BC"
            android:textSize="14sp"
            android:textColor="#1F2937"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- ðŸ’° ä»·æ ¼æ˜¾ç¤º -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- å°è®¡ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subtotal"
                android:textSize="14sp"
                android:textColor="#64748B" />

            <TextView
                android:id="@+id/subtotalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- é…é€è´¹ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery Fee"
                android:textSize="14sp"
                android:textColor="#64748B" />

            <TextView
                android:id="@+id/deliveryFeeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2.99"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- åˆ†å‰²çº¿ -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginVertical="8dp" />

        <!-- æ€»ä»· -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:textSize="16sp"
                android:textColor="#1F2937"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="16sp"
                android:textColor="#22C55E"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- âœ… ç»“è´¦æŒ‰é’® -->
    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to Checkout"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#22C55E"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:gravity="center" />

</LinearLayout>
